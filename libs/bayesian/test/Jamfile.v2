import os ;
import path ;

local BOOST_ROOT = [ os.environ BOOST_ROOT ] ;
use-project /boost : $(BOOST_ROOT) ;

path-constant PROJECT_ROOT : ../../.. ;
tmp_headers = [ path.glob-tree $(PROJECT_ROOT)/bayesian : *.hpp *.ipp *.h *.inc *.SUNWCCh ] ;

project bayesian_test :
    requirements
        <include>../../../
        <include>$(BOOST_ROOT)
    ;

alias bayesian_headers
    : # no sources
    : # no build requirements
    : # no default build
    : <include>tmp_headers ;

unit-test matrix_test : matrix.cpp bayesian_headers ;
unit-test graph_test : graph.cpp bayesian_headers ;
unit-test cpt_test : cpt.cpp bayesian_headers ;
unit-test belief_propagation_test : belief_propagation.cpp bayesian_headers ;
unit-test rejection_sampling_test : rejection_sampling.cpp bayesian_headers ;

